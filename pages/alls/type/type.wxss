.type-container{
  width:100%;
  height:105%;
}
.type-content{
    padding: 5px 20px 8px 20px;
    display: flex;
    border-bottom: 1px solid #efefef;
}
.type-content image{
  width: 40px;
  height: 40px;
  border-radius: 1px;
  margin-right: 20px;
}
.type-content-wrapper{
  display: flex;
  flex:1;
  flex-direction: column;
  justify-content:space-between;
  overflow:hidden;
}
.type-content-title{
  font-size:13px;
  color:#333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.type-content-name{
  font-size:11px;
  color:rgba(0,0,0,0.4);
  /* transform:translateY(-3px); */
}