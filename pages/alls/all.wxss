/* pages/alls/all.wxss */
.all-swiper{
  height: 200px;
}
.all-container image{
  width: 100%;
  height: 100%;
}
.category{
  padding: 10px 15px;
  font-size: 13px;
  color: #666;
}
.category-title{
  line-height: 30px;
}
.image-container-child{
  display: flex;
  height:100px;
  margin-bottom: 8px;
}
.image-pos{
  position: relative;

}
.image-pos text{
  position:absolute;
  display: block;
  left: calc(50% - 12px);
  bottom: 10px;
  z-index: 100;
  color:#fff;
  font-size:12px;
  text-align: center;
}
.image-container-child image{
  width: 100%;
  height: 100%;
}
.image-one{
  flex: 1;
  margin-right:5px;
}
.image-two{
  flex:2;
  margin-right:5px;
}