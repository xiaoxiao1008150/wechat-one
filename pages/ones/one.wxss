@import "post-template/post-template.wxss";
@import "post-menu/post-menu-template.wxss";

.container{
  background-color: #ccc;
}

.post-container{
  background-color: #fff;
  margin-bottom: 10rpx;
}
.post-first-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 13px;
  color: #999;
  }
.post-first-container image{
  width: 100%;
  height: 220px;
}

.post-first-forward{
  width: 80%;
  line-height: 24px;
  color: #666;
}
.post-first-author{ 
  margin: 10px 0 30px;
}
.post-first-author.exp{
  margin: 30rpx 0 40rpx 0 
}
.menu-container{
  padding: 10px 20px;
  color:#666;
  font-size:12px;
}
.menu-title{
  text-align: center;
}
.menu-one{
  margin-right:8px
}
.menu-animation{
  display:none;
  max-height:0;
  overflow:hidden;
  transition: all .3s ease-out;
}
.show{
  display: block;
}
.hide{
  display: none;
}

.slidown {
  max-height: 400px;
  transition-timing-function: ease-in;
}

