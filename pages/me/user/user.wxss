/* pages/me/user/user.wxss */
.user{
  font-size: 12px;
  color: #333;
  padding: 0 20px;
}
.info{
  font-size: 11px;
  margin-bottom: 30px;
  display: block;
}
.user-avatar{
  border-bottom: 1px solid #dbdbdb;
}
.user-avatar image{
  width: 50px;
  height: 50px;
  border-radius: 100%;
}
.user-name{
  padding: 15px 15px  0 0;
}
.user-item{
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding-bottom:10px;
}