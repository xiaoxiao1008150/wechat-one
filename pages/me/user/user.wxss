/* pages/me/user/user.wxss */
.user{
  font-size: 12px;
  color: #333;
  padding: 0 20px;
}
.info{
  font-size: 11px;
  margin-bottom: 30px;
  display: block;
}
.user-avatar{
  border-bottom: 1px solid #dbdbdb;
}
.user-avatar image{
  width: 50px;
  height: 50px;
  border-radius: 100%;
}
.user-name{
  padding: 15px 15px  0 0;
}
.user-name image{
  width: 20px;
  height: 20px;
}
.user-item{
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding-bottom:10px;
}
.user-nickname{
  margin-left: 8px;
}
.edit-nickname{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
}
.mark{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  background: rgba(0,0,0,0.4);
}
.edit-containter{
  padding: 0 20px;
  transform:translateY(-100%);
}
.input-container{
  position: relative;
}
.input-container icon{
  position:absolute;
  right:8px;
  top:52px;
  z-index:1000;
}
.edit-containter input{
  margin-bottom:11px;
  border-radius:4px;
  height: 43px;
  line-height: 43px;
  color:#ccc;
  font-size:12px;
  background: #fff;
  margin: 40px 0 10px 0;
  padding-left: 8px;
}
.edit-containter button{
  color:#fff;
  background-color:#b1d3eb;
}

